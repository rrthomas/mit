from smite_core.instruction_gen import print_enum
from smite_core.ext import *

print('''\
// Auto-generated by gen-ext-opcodes - DO NOT EDIT.
//
// EXT opcodes.

#ifndef SMITE_EXT_OPCODES
#define SMITE_EXT_OPCODES


#define INSTRUCTION(name, opcode) name = opcode,
''')
print_enum(LibInstructions, "")
print_enum(LibcLib, "LIB_C_")
print_enum(SMiteLib, "LIB_SMITE_")

print('''
#undef INSTRUCTION


#endif
''')
