from smite_core.vm_data_extra import *
from smite_core.instruction_gen import *

# Write the output file
print(includes)

print('''
enum {
    SMITE_ERR_EXTRA_INVALID_LIBRARY = 15,
};

#define RAISE(code)                         \\
    return (code);                          \\

// Assumption for file functions
verify(sizeof(int) <= sizeof(smite_WORD));
''')

for lib in LibInstructions:
    print('''\
static int extra_{}(smite_state *S, smite_WORD I)
{{
    smite_WORD temp;
'''.format(str.lower(lib.name)))
    print(dispatch(lib.value.library, '{}_'.format(lib.name), '            RAISE(SMITE_ERR_EXTRA_INVALID_LIBRARY);'))
    print('''
    return SMITE_ERR_OK;
}
''')

print('''
int smite_extra(smite_state *S, smite_WORD I)
{
    smite_WORD temp;
''')

print(dispatch(LibInstructions, '', '''
            return SMITE_ERR_INVALID_OPCODE;'''))

print('''
    return SMITE_ERR_OK;
}''')
