from smite_core.instruction_gen import print_enum
from smite_core.vm_data import Instructions

print('''\
// Auto-generated by gen-opcodes - DO NOT EDIT.
//
// Instruction opcodes.

#ifndef SMITE_OPCODES
#define SMITE_OPCODES


#define INSTRUCTION(name, opcode) name = opcode,
''')

print_enum(Instructions, "O_")

print('''
#undef INSTRUCTION


#endif
''')
